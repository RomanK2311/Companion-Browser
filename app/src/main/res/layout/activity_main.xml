<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <WebView
        android:id="@+id/WebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.anthonycr.progress.AnimatedProgressBar xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimary"
        custom:bidirectionalAnimate="false"
        custom:layout_constraintTop_toTopOf="@id/WebView"
        custom:progressColor="@color/colorAccent" />

    <FrameLayout
        android:id="@+id/FullScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
